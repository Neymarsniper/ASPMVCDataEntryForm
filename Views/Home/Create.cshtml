@model MemberDataEntryForm.Models.MemberViewModel

@{
    ViewData["Title"] = "Create";
}

<br />

@{
    if (ViewBag.ErrorCreating != null)
    {
        <h1 style="color:red;">@ViewBag.ErrorCreating</h1>
    }
}
<br />
    <div class="row text-white" style="border-radius:20px;border: hidden rgb(255,255,255);box-shadow: 0 0 100px rgba(255,255,255,.5); backdrop-filter:blur(300px); width:contain; padding:25px 25px;">

        <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

@*     <div class="row d-inline"> *@
        <div class="col-md-6">
            <h4>FOR MEMBER DIRECTORY</h4>
            <br />
            <div class="row">
