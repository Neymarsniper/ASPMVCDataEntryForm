                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Office No*</h6>
                        <input class="input" asp-for="memberData.OfficeNo" class="form-control" />
                        <span asp-validation-for="memberData.OfficeNo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Profession / Occupation*</h6>
                        <input class="input" asp-for="memberData.Profession" class="form-control" />
                        <span asp-validation-for="memberData.Profession" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Office Address*</h6>
                        <input class="input" asp-for="memberData.OfficeAddress" class="form-control" />
                        <span asp-validation-for="memberData.OfficeAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Mobile No*</h6>
                        <input class="input" asp-for="memberData.MobileNo" class="form-control" />
                        <span asp-validation-for="memberData.MobileNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Alternate Mobile No.*</h6>
                        <input class="input" asp-for="memberData.AlternateMobileNo" class="form-control" />
                        <span asp-validation-for="memberData.AlternateMobileNo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Date of Marriage*</h6>
                        <input class="input" asp-for="memberData.DateofMarriage" class="form-control" />
                        <span asp-validation-for="memberData.DateofMarriage" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Spouse Name*</h6>
                        <input class="input" asp-for="memberData.NameofSpouse" class="form-control" />
                        <span asp-validation-for="memberData.NameofSpouse" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Spouse D.O.B*</h6>
                        <input class="input" asp-for="memberData.SpouseDob" class="form-control" />
                        <span asp-validation-for="memberData.SpouseDob" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group input-field">
                        <h6 class="d-inline">Child Name</h6>
                        <input class="input" asp-for="memberData.ChildName" class="form-control" />
                        <span asp-validation-for="memberData.ChildName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input class="hidden" asp-for="memberData.AuthId" class="form-control" value="@ViewBag.AuthId" />
                    <span asp-validation-for="memberData.AuthId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                    <div class="col-md-6">
                    <div class="form-group input-field">
                            <h6 class="d-inline">Upload Image</h6>
                        <input class="input" asp-for="memberImageModel.Photo" class="form-control" />
                            <span asp-validation-for="memberImageModel.Photo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                    <div class="form-group input-field">
                            <h6 class="d-inline">Upload Signature</h6>
                        <input class="input" asp-for="memberImageModel.Signature" class="form-control" />
                            <span asp-validation-for="memberImageModel.Signature" class="text-danger"></span>
                        </div>
                    </div>
            </div>
            
        </div>
        <br /><br />

