@model MemberDataEntryForm.Models.MemberAddressData

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MemberAddressData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <h6 class="d-inline">Address</h6>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="d-inline">Country</h6>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="d-inline">State</h6>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="d-inline">City</h6>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="d-inline">Postal Code</h6>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="d-inline">Additional Information</h6>
                <input asp-for="AdditonalInfo" class="form-control" />
                <span asp-validation-for="AdditonalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="d-inline">Address Type</h6>
                <input asp-for="AddressType" class="form-control" />
                <span asp-validation-for="AddressType" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <h6 class="d-inline">Member No.</h6>
                <select asp-for="MemNo" class="form-control" asp-items="ViewBag.MemNo"></select>
                <span asp-validation-for="MemNo" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Delete</a> |
<a asp-action="Details" asp-route-id="@Model?.MemNo" class="btn btn-primary">Back to Details</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
