@model MemberDataEntryForm.Models.MemberBusinessData

@{
    ViewData["Title"] = "Edit";
}


<h4 class="text-white">MemberBusiessData - Edit</h4>
<br />
<div class="row text-white" style="border-radius:20px;border: hidden rgb(255,255,255);box-shadow: 0 0 100px rgba(255,255,255,.5); backdrop-filter:blur(300px); width:contain; padding:25px 25px;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group input-field">
                <label asp-for="Id" class="control-label"></label>
                <input class="input" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group input-field">
                <label asp-for="MemNo" class="control-label"></label>
                <input class="input" asp-for="MemNo" class="form-control" />
                <span asp-validation-for="MemNo" class="text-danger"></span>
            </div>
            <div class="form-group input-field">
                <label asp-for="BusinessName" class="control-label"></label>
                <input class="input" asp-for="BusinessName" class="form-control" />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>
            <div class="form-group input-field">
                <label asp-for="BusinessDetail" class="control-label"></label>
                <input class="input" asp-for="BusinessDetail" class="form-control" />
                <span asp-validation-for="BusinessDetail" class="text-danger"></span>
            </div>
            <div class="form-group input-field">
                <label asp-for="BusinessAddress" class="control-label"></label>
                <input class="input" asp-for="BusinessAddress" class="form-control" />
                <span asp-validation-for="BusinessAddress" class="text-danger"></span>
            </div>
            <div class="form-group input-field">
                <label asp-for="BusinessCity" class="control-label"></label>
                <input class="input" asp-for="BusinessCity" class="form-control" />
                <span asp-validation-for="BusinessCity" class="text-danger"></span>
            </div>
            <div class="form-group input-field">
                <label asp-for="BusinessPostalCode" class="control-label"></label>
                <input class="input" asp-for="BusinessPostalCode" class="form-control" />
                <span asp-validation-for="BusinessPostalCode" class="text-danger"></span>
            </div>
            <div class="form-group input-field">
                <label asp-for="BusinessEmail" class="control-label"></label>
                <input class="input" asp-for="BusinessEmail" class="form-control" />
                <span asp-validation-for="BusinessEmail" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="hidden" asp-for="AuthId" class="form-control" value="@ViewBag.AuthId" />
                    <span asp-validation-for="AuthId" class="text-danger"></span>
                </div>
            </div>

            <br />
            @{
                if (ViewBag.msg != null)
                {
                    <div class="form-group">
                        <input type="submit" value="Save data" class="btn btn-success" />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <input type="submit" value="request Changes" class="btn btn-success" />
                    </div>
                }
            }
        </form>
    </div>
</div>
<br />
<div>
    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model?.MemNo" asp-route-AuthId="@ViewBag.AuthId" class="btn btn-primary">Back to Member Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
